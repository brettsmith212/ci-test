# Configuration file for Amp CI-Feedback Loop Agent
# This file can be used to set default values for the agent

# Default settings
MAX_ATTEMPTS=5
POLL_INTERVAL=30
BASE_BRANCH=main
LOG_SIZE_LIMIT=4000

# GitHub settings
# GITHUB_TOKEN=         # Set via environment variable instead
# REPO_URL=             # Can be overridden via command line

# Amp CLI settings
AMP_NON_INTERACTIVE=true
AMP_TIMEOUT=300

# Working directory
# WORK_DIR=/tmp/amp-agent  # Uncomment to set custom work directory

# Logging
LOG_LEVEL=info
ENABLE_COLOR_OUTPUT=true

# CI settings
CI_TIMEOUT=3600  # Maximum time to wait for CI (1 hour)
SKIP_CI_JOBS=    # Comma-separated list of job names to ignore failures

# Safety settings
REQUIRE_TESTS=true       # Fail if no tests are found
VALIDATE_SYNTAX=true     # Check syntax before applying patches
BACKUP_ENABLED=true      # Keep backup of original files
